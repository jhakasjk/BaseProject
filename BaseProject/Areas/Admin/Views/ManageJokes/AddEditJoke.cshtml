@model JokeAddEditModel
@{
    ViewBag.Title = Model.JokeId > 0 ? "Edit Joke" : "Add Joke";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@section scripts{
    @Scripts.Render("~/Content/Admin/ManageJokesManager")
    <script type="text/javascript">
        isSaved = false;
    </script>
}

<div class="page-content">
    <div class="page-header">
        <h1>
            @if (Model.JokeId > 0)
            {
                @Html.Raw("Edit Joke")
            }
            else
            {
                @Html.Raw("Add Joke")
            }
            <small>
                <i class="ace-icon fa fa-angle-double-right"></i>
            </small>
        </h1>
    </div>

    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-10">
            <div id="ErrorMessage" style="display: none" class="alert alert-danger messages">
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <form class="form-horizontal AddUpdateJokeForm" role="form">
                @Html.HiddenFor(x => x.JokeId)
                <div class="space-4"></div>
                <div class="form-group">
                    <label class="col-sm-3 control-label no-padding-right" for="form-field-1">Joke Category </label>
                    <div class="col-sm-9">
                        @Html.DropDownListFor(x => x.JokeCategoryID, (List<SelectListItem>)ViewBag.JokeCategory, "Select Joke Category", new { @class = "cus-slt col-xs-10 col-sm-5" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label no-padding-right" for="form-field-1">Joke Title</label>
                    <div class="col-sm-9">
                        @Html.TextBoxFor(x => x.JokeTitle, new { @placeholder = "Joke Title", @id = "form-field-1", @class = "col-xs-10 col-sm-5" })
                        @Html.ValidationMessageFor(x => x.JokeTitle)
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label no-padding-right" for="form-field-1">Joke</label>
                    <div class="col-sm-9">
                        @Html.TextAreaFor(x => x.JokeContent, new { @placeholder = "Joke", @id = "form-field-1", @class = "col-xs-10 col-sm-5" })
                        @Html.ValidationMessageFor(x => x.JokeContent)
                    </div>
                </div>               
                
               
                <div class="space-4"></div>
                <div class="clearfix form-actions">
                    <div class="col-md-offset-3 col-md-9">
                        <button class="btn btn-info" id="AddEditJoke" type="button">
                            <i class="ace-icon fa fa-check bigger-110"></i>
                            Add
                        </button>
                        <a class="btn btn-info" id="" href="@Url.Action("Index", "ManageJokes", new { Area="Admin" })">
                            <i class="ace-icon fa fa-check bigger-110"></i>
                            Cancel
                        </a>
                    </div>

                </div>
            </form>
        </div>
    </div>
</div>