@model UserAddEditModel
@{
    ViewBag.Title = Model.UserId > 0 ?  "Edit Uder": "Add User" ;
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@section scripts{
    @Scripts.Render("~/Content/Admin/ManageUsersManager")
    <script type="text/javascript">
        isSaved = false;
    </script>
}


<div class="page-content">
    <div class="page-header">
        <h1>
           @if (Model.UserId>0)
           {
               @Html.Raw("Edit User")
           }
           else {
               @Html.Raw("Add User")
           }
            <small>
                <i class="ace-icon fa fa-angle-double-right"></i>
            </small>
        </h1>
    </div>

    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-10">
            <div id="ErrorMessage" style="display: none" class="alert alert-danger messages">
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <form class="form-horizontal AddUpdateUserForm" role="form" >
                @Html.HiddenFor(x => x.UserId)
                <div class="space-4"></div>
                <div class="form-group">
                    <label class="col-sm-3 control-label no-padding-right" for="form-field-1">First Name </label>
                    <div class="col-sm-9">
                        @Html.TextBoxFor(x => x.Name, new { @placeholder = "First Name", @id = "form-field-1", @class = "col-xs-10 col-sm-5" })
                        @Html.ValidationMessageFor(x => x.Name)
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label no-padding-right" for="form-field-1">Email Address </label>
                    <div class="col-sm-9">
                        @Html.TextBoxFor(x => x.Email, new { @placeholder = "Email Address", @id = "form-field-1", @class = "col-xs-10 col-sm-5" })
                        @Html.ValidationMessageFor(x => x.Email)
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label no-padding-right" for="form-field-1">Country </label>
                    <div class="col-sm-9">
                        @Html.DropDownListFor(x => x.Country, (List<SelectListItem>)ViewBag.Country, "Select Country", new { @class = "cus-slt col-xs-10 col-sm-5" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label no-padding-right" for="form-field-1">State </label>
                    <div class="col-sm-9">
                        @Html.DropDownListFor(x => x.State, (List<SelectListItem>)ViewBag.State, "Select State", new { @class = "cus-slt col-xs-10 col-sm-5" })
                        @Html.ValidationMessageFor(x => x.State)
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 control-label no-padding-right" for="form-field-1">City </label>
                    <div class="col-sm-9">
                        @Html.DropDownListFor(x => x.City, (List<SelectListItem>)ViewBag.City, "Select City", new { @class = "cus-slt col-xs-10 col-sm-5" })
                        @Html.ValidationMessageFor(x => x.City)
                    </div>
                </div>
                <div class="space-4"></div>
                <div class="clearfix form-actions">
                    <div class="col-md-offset-3 col-md-9">
                        <button class="btn btn-info" id="AddEditUser" type="button">
                            <i class="ace-icon fa fa-check bigger-110"></i>
                            Add
                        </button>
                        <a class="btn btn-info" id="" href="@Url.Action("Index", "ManageUsers", new { Area="Admin" })">
                            <i class="ace-icon fa fa-check bigger-110"></i>
                            Cancel
                        </a>
                    </div>
                    
                </div>
            </form>
        </div>
    </div>
</div>