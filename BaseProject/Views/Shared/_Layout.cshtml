                {
                    <a href="@Url.Action("login","home")" class="btns login">Login</a>
                }
                else
                {
                    <div class="dropdown ">
                        <button class="btn btn-default dropdown-toggle my_btn" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-expanded="true">
                            Welcome: @user.FullName
