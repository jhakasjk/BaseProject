    string Controller = (ViewBag.Controller as string).ToLower();
    string Action = (ViewBag.Action as string).ToLower();
    string baseUrl = Request.Url.Scheme + "://" + Request.Url.Authority + Request.ApplicationPath.TrimEnd('/');
}
<body class="no-skin">
