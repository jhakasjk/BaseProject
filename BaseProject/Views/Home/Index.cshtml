@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<UserPageView> ExistingVisitorSession = ViewBag.ExistingVisitorSession;
}

<div class="center-content">
    @BaseProject.Resources.Common.WelcomeMessage<br />
    <div>Current Time: <span id="timer" style="font-weight:bold;font-size:16px;"></span></div>
    <div class="center-inr Jokes-div">
        @Html.Partial("_UserSession", ExistingVisitorSession)
    </div>
</div>
@section Script{
    <!--Script references. -->
    <!--The jQuery library is required and is referenced by default in _Layout.cshtml. -->
    <!--Reference the SignalR library. -->
    <script src="~/Scripts/jquery.signalR-2.2.0.min.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>
    <!--SignalR script to update the chat page and send messages.-->
    <script>
        $(function () {

            // Reference the auto-generated proxy for the hub.
            var userActivity = $.connection.userAvtivitHub;
            // Create a function that the hub can call back to display messages.
            userActivity.client.updateUserActivity = function (existingVisitorSession) {
                // Add the message to the page.
                if (existingVisitorSession.Status = 200) {
                    $('.Jokes-div').html(existingVisitorSession.Results[0]);
                }
            };
            // Get the user name and store it to prepend to messages.
            //$('#displayname').val(prompt('Enter your name:', ''));
            // Set initial focus to message input box.
            //$('#message').focus();
            // Start the connection.
            $.connection.hub.start().done(function () {
                //$('#sendmessage').click(function () {
                //    // Call the Send method on the hub.
                //    chat.server.send($('#displayname').val(), $('#message').val());
                //    // Clear text box and reset focus for next comment.
                //    $('#message').val('').focus();
                //});   
            });


            var hub = $.connection.uptimeHub;
            $.connection.hub.start();
            hub.client.internetUpTime = function (time) {
                $('#timer').text(time);                
            };
        });
        // This optional function html-encodes messages for display in the page.
        function htmlEncode(value) {
            var encodedValue = $('<div />').text(value).html();
            return encodedValue;
        }
    </script>
}
