@model ChangePasswordWebsiteModel
<form action="/Home/UpdatePassword" class="form-password-change" id="form-password-change" method="post" onsubmit="return UpdatePassword(this)">
    <div class="aj-fld">
        <p class="aj-ttl">Old Password</p>
        @Html.PasswordFor(m => m.OldPassword, new { @class = "add-inpt full_width", @placeholder = "Old Password" })
        @Html.ValidationMessageFor(m => m.OldPassword)
    </div>
    <div class="aj-fld">
        <p class="aj-ttl">New Password</p>
        @Html.PasswordFor(m => m.Password, new { @class = "add-inpt full_width", @placeholder = "New Password" })
        @Html.ValidationMessageFor(m => m.Password)
    </div>
    <div class="aj-fld">
        <p class="aj-ttl">Confirm Password</p>
        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "add-inpt full_width", @placeholder = "Confirm Password" })
        @Html.ValidationMessageFor(m => m.ConfirmPassword)
    </div>
    <div class="aj-fld">
        <input type="submit" class="save btns forget_btn" value="Save">
    </div>
</form>
